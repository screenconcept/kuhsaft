- content_for :cms_language_tabs do
  - I18n.available_locales.each do |locale|
    %li{ :class => (:current if params[:locale] == locale.to_s) }= link_to locale.to_s, kuhsaft.new_page_path(:locale => locale)

.page-tree-breadcrumb
  - available_parent_pages.each do |parent_page|
    = link_to((parent_page[:title].presence || parent_page.title), parent_page[:link].presence || kuhsaft.edit_page_path(parent_page))

.box-container
  = render :partial => 'form', :locals => { :url => kuhsaft.pages_path, :page_title => t('.new') }
