.brick-item{ :id => brick.to_brick_item_id }
  = simple_form_for brick, :as => :brick, :url => kuhsaft.brick_path(brick), :remote => true, :html => { :class => (brick.render_stacked? ? '' : 'form-horizontal'), :id => nil } do |form|
    - if brick.user_can_change_persisted?
      .brick-item-header
        .btn-group
          = form.button :submit, :class => 'btn btn-success btn-small ', :value => 'Save âœ”'

        - if brick.persisted?
          = link_to kuhsaft.brick_path(brick), :class => 'btn btn-small btn-danger', :confirm => t('kuhsaft.cms.bricks.brick_item.confirm'), :method => :delete, :remote => true do
            %i.icon-trash.icon-white

    - brick_content = render(brick.to_edit_partial_path, :brick => brick, :form => form)
    - if brick_content.present?
      .brick-item-content
        = brick_content


  - if brick.renders_own_childs?
    .brick-item-childs
      = render brick.to_edit_childs_partial_path, :brick => brick
  - else
    - if brick.respond_to?(:bricks)
      .brick-item-childs
        = render 'kuhsaft/cms/bricks/brick_list', :brick_list => brick
