!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %title Kuhsaft CMS
    = stylesheet_link_tag 'kuhsaft/cms/application.css', :media => 'screen, projection'
    = csrf_meta_tag

  %body{ :class => "#{controller_name}" }
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = render 'main_navigation'

      #toolbar
    .container.cms
      .row-fluid
        .span-12
          = yield
    = javascript_include_tag 'kuhsaft/cms/application.js'
